<Window x:Class="kalCOOLaTHOR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kalCOOLaTHOR"
        mc:Ignorable="d"
        Title="Калькулятор" Height="400" Width="300">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- поля для ввода -->
        <TextBox Name="titleTextBox"
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="5"/>

        <TextBox Name="authorTextBox"
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="5"/>

        <TextBox Name="yearTextBox"
                Grid.Row="2" 
                Grid.Column="1"
                Margin="5"/>

        <!-- выпадающий список для выбора состояния книги -->
        <ComboBox Name="stateComboBox"
                Grid.Row="3" 
                Grid.Column="1"
                Margin="5">
            <ComboBoxItem Content="Отличное"/>
            <ComboBoxItem Content="Нормальное"/>
            <ComboBoxItem Content="Плохое"/>
        </ComboBox>

        <!-- UniformGrid с кнопками -->
        <UniformGrid Columns="2"
                Grid.Row="4" 
                Grid.Column="1">

            <Button Content="Добавить"
                    Name="addBookButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsDefault="True"
                    Click="addBookButton_Click"/>

            <Button Content="Очистить"
                    Name="clearBookButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsCancel="True"
                    Click="clearBookButton_Click"/>
            
            <Button Content="Очистить"
                    Name="2clearBookButton"
                    Padding="5"
                    Margin="5,10,5,0"
                    IsCancel="True"
                    Click="clearBookButton_Click"/>
        </UniformGrid>

        <!-- фоновое изображение -->
        <Image Source="/Images/book.png" 
                Grid.Row="5" 
                Grid.Column="0"
                VerticalAlignment="Bottom"
                MaxHeight="100"
                MaxWidth="100" 
                Opacity="0.4"/>

    </Grid>
</Window>
